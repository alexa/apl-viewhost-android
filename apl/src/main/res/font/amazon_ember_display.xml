<!--
    Per UX Team:
    Ember Display has 5 available weights:
    Light Regular Medium Bold Heavy

    Font fontWeight
    Amazon Ember Display Regular    "normal"
    Amazon Ember Display Bold       "bold"
    Amazon Ember Display Light      "100"
    Amazon Ember Display Light      "200"
    Amazon Ember Display Light      "300"
    Amazon Ember Display Regular    "400"
    Amazon Ember Display Medium     "500"
    Amazon Ember Display Medium     "600"
    Amazon Ember Display Bold       "700"
    Amazon Ember Display Bold       "800"
    Amazon Ember Display Heavy      "900"
  -->

<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <font
        android:font="@font/amazon_ember_display_light"
        android:fontStyle="normal"
        android:fontWeight="300"
        app:font="@font/amazon_ember_display_light"
        app:fontStyle="normal"
        app:fontWeight="300" />
    <font
        android:font="@font/amazon_ember_display_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/amazon_ember_display_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />
    <font
        android:font="@font/amazon_ember_display_medium"
        android:fontStyle="normal"
        android:fontWeight="500"
        app:font="@font/amazon_ember_display_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />
    <font
        android:font="@font/amazon_ember_display_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/amazon_ember_display_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />
    <font
        android:font="@font/amazon_ember_display_heavy"
        android:fontStyle="normal"
        android:fontWeight="900"
        app:font="@font/amazon_ember_display_heavy"
        app:fontStyle="normal"
        app:fontWeight="900" />
</font-family>
